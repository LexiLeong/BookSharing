/* pages/search/search.wxss */
.book-content{
  margin-top: 10rpx;
}

.book-image{
  display: flex;
  width: 100%;
  height: 250px;
  align-items: center;
  justify-content:center;
  margin-top: 20rpx;
  background-color: #fff;
}

.book-image image{
  height: 90%;
  width: 90%;
}


.book-info{
  background-color: #fff;
  flex: 0 0 66%;
  box-sizing: border-box;
  height: 242rpx;
  margin-left: 20rpx;
}

.book-info-style{
  height: 244rpx;
  background-color: white;
}

.book-info-style view{
  display: block;
  font-size: 30rpx;
  margin-bottom: 8rpx;
  width: 460rpx;
  text-overflow:ellipsis; 
  overflow:hidden; 
  white-space:nowrap; 
  margin-top: 8rpx;
}
