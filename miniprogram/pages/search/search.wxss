/* pages/search/search.wxss */

.input-placeholder {
  font-size: 30rpx;
}

.book-content{
  margin-top: 10rpx;
  height: auto;
  background-color: #fff;
  padding-bottom: 10px;
}

.book-list{
  display: flex;
  height:auto;
  width: 93.3%;
  flex-direction: column;
  align-items: flex-start;
  justify-content:flex-start;
  box-sizing: border-box;
  margin: 10px;
  background-color: #fff;
  
  flex-wrap: wrap; 
  align-items: stretch;
  display: flex;
  border: 3px solid #eee;

}

.book-image{
  margin: 10px;
  width: 100%;
  height: 250px;
  align-items: center;
  justify-content:center;
}
.book-info{
  box-sizing: border-box;
  width: 90%;
  height: auto;
  margin-left: 20rpx;
}

.book-info-style{
  background-color: white;
}

.book-info-style view{
  display: block;
  font-size: 30rpx;
  margin-bottom: 8px;
  
  word-break: keep-all;
  word-wrap: break-word;
  white-space: pre-line;

}

.line{
  width: 100%;
  border: 1px solid #eee;
}
#getId{
  display: none;
}




