/* pages/userRelease/userRelease.wxss */
.book-content{
  margin-top: 10rpx;
}

.book-image{
  display: flex;
  width: 100%;
  height: 250px;
  align-items: center;
  justify-content:center;
  margin-top: 20rpx;
  background-color: #fff;
}

.book-image image{
  height: 90%;
  width: 90%;
}

.book-info{
  background-color: #fff;
  width: 100%;
}

.book-info-style{
  margin-left: 20px;
  background-color: white;
  padding-bottom: 5px;
}

.book-info-style view{
  display: block;
  font-size: 30rpx;
  margin-bottom: 10px;
  width: 100%;
  text-overflow:ellipsis; 
  overflow:hidden; 
  white-space:normal; 
}
